<body>
  <header class="hero">
    <a href="/doc">View API documentation</a>
    <a href="/">View entries</a>
    <h1>Talk in Corporate.</h1>
    <h2>How do you professionaly say...?</h2>
  </header>
  <main class="forms">
    <section aria-labelledby="add-entry-title" id="add-entry">
      <h2 id="add-entry-title">Add your entry</h2>
      <form action="/" method="POST">
        <textarea placeholder="What you mean" name="original" id="original" rows="4" required></textarea>
        <textarea placeholder="Corporate version" name="corporate" id="corporate" rows="4" required></textarea>
        <select name="category" id="category">
          <option value="general">Select a category</option>
          <option value="general">General communication</option>
          <option value="boundary">Boundaries</option>
          <option value="lazy">Dealing with laziness</option>
          <option value="demand">Asking for something</option>
          <option value="interview">Interview</option>
        </select>
        <button type="submit">Submit</button>
      </form>
    </section>

    <section aria-labelledby="update-entry-title" id="update-entry">
      <h2 id="update-entry-title">Update entry</h2>
      <form action="/" id="patch-form" method="POST">
        <input type="text" name="patchid" id="patchid" placeholder="Entry ID">
        <input type="hidden" name="_method" value="PATCH">
        <textarea placeholder="What you mean" name="original" id="patch-original" rows="4" required></textarea>
        <textarea placeholder="Corporate version" name="corporate" id="patch-corporate" rows="4" required></textarea>
        <select name="category" id="patch-category">
          <option value="general">Select a category</option>
          <option value="general">General communication</option>
          <option value="boundary">Boundaries</option>
          <option value="lazy">Dealing with laziness</option>
          <option value="demand">Asking for something</option>
          <option value="interview">Interview</option>
        </select>
        <button type="submit">Submit</button>
      </form>
    </section>

    <section aria-labelledby="delete-entry-title" id="delete-entry">
      <h2 id="delete-entry-title">Delete entry</h2>
      <form action="/" id="delete-form" method="POST">
        <input type="text" name="deleteid" id="deleteid" placeholder="Entry ID">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit">Submit</button>
      </form>
    </section>
  </main>

